{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "groupName": "react core",
      "matchPackageNames": [
        "/^react/",
        "/^@types/react/"
      ]
    },
    {
      "groupName": "eslint group",
      "matchPackageNames": [
        "eslint-config-next",
        "/eslint/",
        "/@typescript-eslint/"
      ]
    }
  ],
  "rangeStrategy": "pin",
  "timezone": "Europe/Prague",
  "schedule": [
    "before 8am on monday"
  ]
}
